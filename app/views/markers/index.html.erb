<div class="container padding-50">
<p id="notice"><%= notice %></p>

<h1 style="text-align: center;">Markers</h1>
<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Categories</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <tr>
        <td><%= marker.name %></td>
        <td><%= marker.type.name %></td>
        <td><%= marker.categories.pluck(:name).join(',') %></td>
        <td><%= link_to 'Show', marker %></td>
        <td><%= link_to 'Edit', edit_marker_path(marker) %></td>
        <td><%= link_to 'Destroy', marker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Marker', new_marker_path, data: {turbolinks: "false"} %>
</div>